@page
@model WEB_053502_Raniuk.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.Id" />
            <div class="form-group">
                <label asp-for="Film.Name" class="control-label"></label>
                <input asp-for="Film.Name" class="form-control" />
                <span asp-validation-for="Film.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Description" class="control-label"></label>
                <input asp-for="Film.Description" class="form-control" />
                <span asp-validation-for="Film.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Category" class="control-label"></label>
                <input asp-for="Film.Category" class="form-control" />
                <span asp-validation-for="Film.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.CategoryId" class="control-label"></label>
                <input asp-for="Film.CategoryId" class="form-control" />
                <span asp-validation-for="Film.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Duration" class="control-label"></label>
                <input asp-for="Film.Duration" class="form-control" />
                <span asp-validation-for="Film.Duration" class="text-danger"></span>
            </div>
   <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Film.Image))
                {
                    <img src="~/Images/@Model.Film.Image" alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input" name="image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения</label>
                </div>
                @*<input asp-for="Dish.Image" class="form-control" />
        <span asp-validation-for="Dish.Image" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>


@section Scripts{ 
     @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
    <script src="~/js/bs-custom-file-input.js"></script>
    <script>
    bsCustomFileInput.init();
</script>
}